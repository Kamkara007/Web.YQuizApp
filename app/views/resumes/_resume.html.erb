<div id="<%= dom_id resume %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= resume.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Slug:</strong>
    <%= resume.slug %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= resume.user_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Course:</strong>
    <%= resume.course_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this resume", resume, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this resume', edit_resume_path(resume), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
